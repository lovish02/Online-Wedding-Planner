            </div> <!-- /.site-header -->
  <div class="container con-style">
    <% for(var i = 0; i < photographer.length; i++){ %>
      <div class="col-sm-6">
        <div class="card card-style">
          <div class="img-div-set">
            <img class="card-img-top img-set" src="<%= photographer[i].imgUrl %>" alt="Photographers">
          </div>
          <div class="card-body">
            <h3 class="card-title"><%= photographer[i].name %></h3>
            <p class="card-text" ><i class="fa fa-map-marker" aria-hidden="true"></i> Place:- <%= photographer[i].city %></p>
            <% if(photographer[i].pricing){ %>
                <p class="card-text" ><i class="fa fa-inr" aria-hidden="true"> Price:- <%= photographer[i].pricing[0].price %> onwards</i></p>
            <% }else{ %>
              <p class="card-text" ><i class="fa fa-inr" aria-hidden="true"> Price:- As per the requirement.</i></p>
            <% } %>
            
            <!-- <a href="photographer1.html" class="btn btn-primary" >Know More</a> -->
            <form action = "<%= source %>" method="post">
              <button class="btn btn-dark" type="submit" name="id" value="<%= photographer[i]._id %>">Know More</button>
            </form>
          </div>
        </div>
      </div>
    <% } %>
  </div>
  <script type="text/javascript">
    $(window).scroll(function() {
        $('.main-header').toggleClass('scrolled', $(this).scrollTop() > 1);
        console.log("scrolled");
    });
  </script>
